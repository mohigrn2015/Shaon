
@model List<TestPdF.Models.Employee>
@{
    ViewBag.Title = "Home Page";
}
<div class="row">
    <div class="col-md-8">
        <div id="Grid">
            <div id="PrintPDF">
                <div class="container">
                    <h3>Hello</h3>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Address</th>
                                <th>Phone</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                    <td>@item.Address</td>
                                    <td>@item.Phone</td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        @using (Html.BeginForm("ExportHTML", "Home", FormMethod.Post))
        {
            <input type="hidden" name="ExportData" />
            <input type="submit" id="btnSubmit" value="Export" />
        }
        @using (Html.BeginForm("Export", "Home", FormMethod.Post))
        {
            <input type="hidden" name="GridHtml" />
            <input type="submit" id="btnSubmitExcel" value="ExportExcel" />
        }
        <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>

        <script type="text/javascript">
            $(function () {
                $("#btnSubmit").click(function () {
                    $("input[name='ExportData']").val($("#PrintPDF").html());
                });
            });

            $(function () {
                $("#btnSubmitExcel").click(function () {
                    $("input[name='GridHtml']").val($("#Grid").html());
                });
            });

        </script>
    </div>
</div> 